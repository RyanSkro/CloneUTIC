<!-- Page for displaying form for creating or updating a course -->

<!DOCTYPE html>
<html lang="en">

<head>
	<title>GVSU Depth Charts Course Edit Page</title>
	<meta charset="utf-8"> 
	<meta name="viewport" content="width=device-width, initial-scale=1">  
	<link rel="icon" href="favicon.ico">
  <link rel="stylesheet" href="styles/style.css">
</head>


	<% 
		if (key.) {
			submitLabel = "Update Course";
			route = `/courses/${course.courseID}`;
			edit = true;
		} else {
			submitLabel = "Create Course";
			route = "/courses";
			edit = false;
		}
	%>

<body>

	<h1><%= submitLabel %></h1>
	
	<nav class="center">		
		<ul>
			<li class="btn-group">  	
				<!--Nav bar-->
					<a class="btn btn-primary" href="/courseSearch">Search by Course</a>
					<a class="btn btn-primary" href="/facultySearch">Search by Professor</a>
					<a class="btn btn-primary" href="/courses">Course List</a>
					<a class="btn btn-primary" href="/users">Faculty List</a>
					<a class="btn btn-primary" href="/addFunc">Additional Functions</a>
			</li>
		</ul>		
	</nav> 

	<% if (course.errors.length > 0) { %>
        <% console.log("Errors occurred"); console.log(course.errors); %>

            <div>
                <p>Errors:</p>
                <ul>
                    <%- course.errors.map((item) => `<li>${item}</li>`).join("\n"); %>
                </ul>
            </div>
	<% } %>
	
	<div class="background">
	  <form action="<%= route %>" accept-charset="UTF-8" method="post" class="form">
	
		<div class="field">
			<label for="course_courseID">Course ID</label>
			<input type="text" id="course_courseID" name="course[courseID]" placeholder="CIS101" value="<%= course.courseID %>">
		</div>

		<div class="field">
			<label for="course_name">Course Name</label>
			<input type="text" id="course_name" name="course[name]" placeholder="Introduction to Computing" value="<%= course.name %>">
		</div>

		<div class="actions">
			<input type="submit" name="commit" value="<%= submitLabel %>" class="btn btn-primary"/>
			<% if(edit) { %>
				<a class="btn btn-danger" href="/courses/<%= course.courseID %>/delete">Delete Course</a>
			<% } %>
		</div>

	   </form>
	</div>
	
	
	</body>
	
