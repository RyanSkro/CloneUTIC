	text-align: right; 
	}

	/*button itself*/
	.dropbtn {  
	background-color: #FFF0F5; 
	font-size: 16px;
	border: none;
	}
	/*centering dropdown*/
	.dropdown { 
	position: relative;
	display: inline-block;
	}

	/*content inside the dropdown*/
