	display: none;
	position: absolute;
	background-color: #FFFFFF;
	min-width: 200px; 
	}
	.dropdown-content a { 
	color: black;
	padding: 12px 16px;
	text-decoration: none;
	display: block;
	}

	.left{
	display: block;
	float: left;
	}

	.right {
	display: block;
	float: right;
	}

	/*Table Designing*/ 
	table {
	border: 1px solid #000; 
	border-collapse: collapse;
	margin: 0 auto; 
	width: 98%;
	text-align: center;	  
	font-family: 'Quicksand', sans-serif; 
	}

	caption {
	font-size: 1.8em; 
	font-weight: bold;  
	}

	td {
	padding: 1em; 
	font-size: 1em; 
