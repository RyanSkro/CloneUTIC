	font-size: 1.25em; 
	text-align: center; 
	padding: 1.15em;
	}

	tr {
	background-color: #fff;
	}

	li{
	padding: 0;
	margin: 0;
	}

	input[type=text], select {
	padding: 12px 20px;
	margin: 8px 0;
	display: block;
	border: 1px solid #ccc;
	border-radius: 4px;
	box-sizing: border-box;
	}

