	width: 100%;
	padding: 7px;
	border: none;
	border-radius: 5px;
	color: black;
	font-weight: bold;
	background-color: #90ee90;
	cursor: pointer;
	outline: none;
	}


	/* Style for Faculty and Admin Page */
	img {
	max-width: 30%
	}  
	
	.content p {
	border: 8px solid; 
	border-color: #b0c4de; 
	border-radius: 10px; 
	padding: 1em; 
	margin: 2em; 
	font-size: 1.25em; 
	text-align: center;
	}

	/*centering the banner and center command*/
	.center {
	display: block;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	} 

	/*centering the page and creating a width for page*/
	.wrapper {
	width: 90%;
	margin-left: auto;
	margin-right: auto;
	}

	/*Button*/
